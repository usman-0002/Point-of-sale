<div class= 'login-form neumorphism'>
  <h2 class='text-center'>Forgot your password?</h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autocomplete: "email", placeholder: 'Enter your email here', class: 'input-style' %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: 'login-button' %>
    </div>
  <% end %>

  <%= link_to "Log in", new_session_path(resource_name), class: 'forgot-pass' %>
</div>