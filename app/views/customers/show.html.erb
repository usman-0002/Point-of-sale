<%= render partial: 'shared/page_header', locals: {title: 'Customer Details'}%>

<div class="card customer-details">
  <%= image_tag @customer.customer_detail.avatar_url, class: "card-img-top"%>
  <div class="card-body">
    <h5 class="card-title text-center"><%= @customer.customer_detail.full_name%></h5>
    <p><span class='bold-text'>Email: </span><%= @customer.customer_detail.email%></p>
    <p><span class='bold-text'>Mobile Number: </span><%= @customer.customer_detail.mobile_number%></p>
    <p><span class='bold-text'>City: </span><%= @customer.customer_detail.city%></p>
    <p><span class='bold-text'>Address: </span><%= @customer.customer_detail.address%></p>
  </div>
  <div class='card-footer'>
    <%= link_to '<i class="bi bi-pencil-square"></i> Edit'.html_safe, edit_customer_path(@customer), class: 'btn m-1 btn-info'%>
    <%= link_to '<i class="bi bi-trash3"></i> Delete'.html_safe, customer_path(@customer), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn m-1 btn-danger'%>
  </div>
</div>