<div class="modal-header">
  <h4 class="modal-title" id="myModalLabel"><%="#{form_submit_btn_text(action)} Product Category"%></h4>
  <button type="button" class="close btn btn-light" data-dismiss="modal">X</button>
</div>
<%= form_for(@category, remote: true, action: action) do |f| %>
  <div class="modal-body">
    <div class='w-100 mb-3'>
      <%= f.label :name %>
      <%= f.text_field :name, placeholder: 'General Store e.g.', class: 'form-control', required: true %>
    </div>
  </div>
  <div class="modal-footer">
    <%= f.submit "#{form_submit_btn_text(action)} Category", class: 'btn btn-success' %>
  </div>
<% end %>
