<div class="modal-header">
  <h4 class="modal-title" id="myModalLabel">New Category</h4>
  <button type="button" class="close btn btn-light" data-dismiss="modal">X</button>
</div>
<%= form_for(@category, remote: true, url: new_product_category_path) do |f| %>
  <div class="modal-body">
    <div class='w-100 mb-3'>
      <%= f.label :name %>
      <%= f.text_field :name, placeholder: 'Enter Category Name', class: 'form-control', required: true %>
    </div>
  </div>
  <div class="modal-footer">
    <%= f.submit 'Add Category', class: 'btn btn-success' %>
  </div>
<% end %>
