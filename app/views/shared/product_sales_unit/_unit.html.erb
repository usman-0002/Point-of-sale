<div class="card border-success mb-2">
  <div class="card-header text-center">
    <strong><%= unit.sales_unit.name%></strong> ( <strong><%= unit.sales_unit.abbreviation%></strong> )
  </div>
  <div class="card-body">
    <p class="card-text"><%= @product.description%></p>
    <p class="card-text"><strong>Unit Price: </strong><%= unit.unit_price %></p>
  </div>
  <div class='card-footer text-center'>
    <%= link_to '<i class="bi bi-pencil-square"></i> Edit'.html_safe, edit_product_sales_unit_path(unit), remote: true, class: 'btn m-1 btn-info'%>
    <%= link_to '<i class="bi bi-trash3"></i> Delete'.html_safe, product_sales_unit_path(unit), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn m-1 btn-danger'%>
  </div>
</div>