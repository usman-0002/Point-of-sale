<div class="modal-header">
  <h4 class="modal-title" id="myModalLabel"><%="#{form_submit_btn_text(action)} Sales Unit"%></h4>
  <button type="button" class="close btn btn-light" data-dismiss="modal">X</button>
</div>
<%= form_for(@sales_unit, url: {action: action }) do |f| %>
  <div class="modal-body">
    <div class='w-100 mb-3'>
      <%= f.label :name %>
      <%= f.text_field :name, placeholder: 'Kilo Gram', class: 'form-control', required: true %>
    </div>
    <div class='w-100 mb-3'>
      <%= f.label :abbreviation %>
      <%= f.text_field :abbreviation, placeholder: 'kg', class: 'form-control', required: true %>
    </div>
  </div>
  <div class="modal-footer">
    <%= f.submit "#{form_submit_btn_text(action)} Unit", class: 'btn btn-success' %>
  </div>
<% end %>