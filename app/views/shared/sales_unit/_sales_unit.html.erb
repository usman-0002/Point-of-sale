<div class="card ms-2">
  <div class='card-header text-center'>
    <h5 class="card-title"><%= sales_unit.name%></h5>
  </div>
  <div class="card-body">
    <p>Abbreviation: <%= sales_unit.abbreviation%></p>
    <p>Total Products: <%= sales_unit.products.count%></p>
  </div>
  <div class='card-footer text-center'>
    <%= link_to '<i class="bi bi-pencil-square"></i> edit'.html_safe, edit_sales_unit_path(sales_unit), remote: true, class: 'btn m-1 btn-info'%>
    <% if sales_unit.products.blank?%>
      <%= link_to '<i class="bi bi-trash3"></i> Delete'.html_safe, sales_unit_path(sales_unit), method: :delete, class: 'btn m-1 btn-danger'%>
    <% end%>
  </div>
</div>