<div class="d-flex flex-column flex-shrink-0 p-3 side-bar">
    <div class="logo">
      <i class="bi bi-shop-window"></i>
      <strong class="h5">Point Of Sale System</strong>
    </div>
    <hr>
    <ul class="nav nav-pills flex-column mb-auto">
      <li class="nav-item">
        <%= link_to '<i class="bi bi-speedometer2 icon-style"></i> Dashboard'.html_safe, root_path, class: "nav-link link-dark #{'active' if controller.controller_name == 'dashboard'}" %>
      </li>
      <li>
        <a type="button" class="sidebar-submenu nav-link link-dark">
          <i class="bi bi-cart4 icon-style"></i>Sale
          <i class="bi bi-caret-down-fill"></i>
        </a>
        <div class="sidebar-submenu-container" display_sales_submenu = "<%= hide_sales_submenu(controller.controller_name) %>">
          <%= link_to 'New Sale', new_sale_path, class: "nav-link link-dark #{'active' if controller.controller_name == 'sales'}" %>
          <%= link_to 'Sales History', categories_path, class: "nav-link link-dark #{'active' if controller.controller_name == 'sales history'}" %>
        </div>
      </li>
      <li>
        <a type="button" class="sidebar-submenu nav-link link-dark">
          <i class="bi bi-basket2-fill icon-style"></i>Items
          <i class="bi bi-caret-down-fill"></i>
        </a>
        <div class="sidebar-submenu-container" display_items_submenu = "<%= hide_items_submenu(controller.controller_name) %>">
          <%= link_to 'Products', products_path, class: "nav-link link-dark #{'active' if controller.controller_name == 'products'}" %>
          <%= link_to 'Categories', categories_path, class: "nav-link link-dark #{'active' if controller.controller_name == 'categories'}" %>
          <%= link_to 'Sales Units', sales_units_path, class: "nav-link link-dark #{'active' if controller.controller_name == 'sales_units'}" %>
        </div>
      </li>
      <li>
        <a type="button" class="sidebar-submenu nav-link link-dark">
          <i class="bi bi-people-fill icon-style"></i>Parties
          <i class="bi bi-caret-down-fill"></i>
        </a>
        <div class="sidebar-submenu-container" display_parties_submenu = "<%= hide_parties_submenu(controller.controller_name) %>">
          <%= link_to 'Customers', customers_path, class: "nav-link link-dark #{'active' if controller.controller_name == 'customers'}" %>
          <%= link_to 'Suppliers', suppliers_path, class: "nav-link link-dark #{'active' if controller.controller_name == 'suppliers'}" %>
          <%= link_to 'Employees', employees_path, class: "nav-link link-dark #{'active' if controller.controller_name == 'employees'}" %>
        </div>
      </li>
      <li>
        <a href="#" class="nav-link link-dark">
          <i class="bi bi-graph-up-arrow icon-style"></i>
          Reports
        </a>
      </li>
    </ul>
    <hr>
    <div class="dropdown">
      <a href="#" style="color: #0d6efd" class="admin-dropdown dropdown-toggle" id="dropdownUser2" data-bs-toggle="dropdown" aria-expanded="false">
        <i class="bi bi-person-circle"></i>
        <strong>Admin</strong>
      </a>
      <ul class="dropdown-menu text-small shadow" aria-labelledby="dropdownUser2">
        <li><%= link_to "Edit Profile", edit_user_registration_path, class: "dropdown-item" %></li>
        <li><a class="dropdown-item" href="#">Settings</a></li>
        <li><hr class="dropdown-divider"></li>
        <li><%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item" %></li>
      </ul>
    </div>
  </div>