  <div class='w-100'>
    <strong>CODE</strong>
  </div>
  <div class='w-100'>
    <strong>NAME</strong>
  </div>
  <div class='w-100'>
    <strong>STOCK</strong>
  </div>
</div>

<%= render partial: 'shared/product', collection: @products%>
